generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Flashcard {
  id                   Int                 @id @default(autoincrement())
  flashcard_front      String
  flashcard_back       String
  savedFlashcardListId Int?
  createdAt            DateTime            @default(now())
  updatedAt            DateTime
  savedFlashcardList   savedFlashcardList? @relation(fields: [savedFlashcardListId], references: [id])
}

model Pet {
  id    Int    @id @default(autoincrement())
  name  String
  owner String
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}

model savedFlashcardList {
  id           Int         @id @default(autoincrement())
  userID       String
  listName     String
  flashcardIds Int[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime
  Flashcard    Flashcard[]
}
